# BJS Menu Backend Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# Secret key for JWT token signing - MUST be changed in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=change-me-in-production

# Database URL
# SQLite (development): sqlite:///./data/bjsbar.db
# PostgreSQL (production): postgresql://user:password@localhost:5432/bjsbar
DATABASE_URL=sqlite:///./data/bjsbar.db

# CORS allowed origins (comma-separated)
# Development: http://localhost:3000,http://localhost:8000
# Production: https://menu.bjs.bar,https://admin.bjs.bar
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Debug mode (disable in production)
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# JWT token expiration in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Timezone
TIMEZONE=Europe/Sofia

# Redis URL for caching and rate limiting
# Development: redis://localhost:6379/0
# Production: redis://redis:6379/0
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# EXTERNAL SERVICES (optional)
# =============================================================================

# Stripe payment integration (optional - only needed for payment features)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe webhook secret (optional - only needed for payment webhooks)
# STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# OpenWeather API key (optional - used for weather-based menu suggestions)
# OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# AI/ML SETTINGS
# =============================================================================

# Enable AI V2 pipeline (2-stage: YOLO detection + SKU classification)
AI_V2_ENABLED=false

# AI confidence thresholds
AI_CONFIDENCE_THRESHOLD=0.5
AI_V2_DETECTION_THRESHOLD=0.5
AI_V2_CLASSIFICATION_THRESHOLD=0.65

# Enable active learning for continuous model improvement
AI_V2_ACTIVE_LEARNING_ENABLED=true

# File upload size limit in MB
MAX_UPLOAD_SIZE_MB=10

# =============================================================================
# RATE LIMITING
# =============================================================================

# Enable rate limiting (recommended for production)
RATE_LIMIT_ENABLED=true

# Maximum requests per window
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# =============================================================================
# POS INTEGRATION
# =============================================================================

# Default POS connector type: csv, api
POS_DEFAULT_CONNECTOR=csv
