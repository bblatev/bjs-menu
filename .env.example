# Docker Compose environment variables
# Copy this file to .env and fill in real values.
# NEVER commit the .env file with real secrets!

# PostgreSQL
POSTGRES_USER=bjs
POSTGRES_PASSWORD=CHANGE_ME_generate_with_openssl_rand_base64_32
POSTGRES_DB=bjs_menu

# Redis
REDIS_PASSWORD=CHANGE_ME_generate_with_openssl_rand_base64_32

# Security - generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_generate_with_python_secrets

# CORS - comma-separated allowed origins
CORS_ORIGINS=https://menu.bjs.bar,https://bjs.bar

# Frontend URLs
NEXT_PUBLIC_API_URL=https://menu.bjs.bar/api/v1
NEXT_PUBLIC_WS_URL=wss://menu.bjs.bar
